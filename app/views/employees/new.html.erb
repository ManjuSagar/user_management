<div class="container" style="margin-top: 50px;">
  <form role="form">
    <%#= form_tag({controller: "load", action: "new"}, method: "post") do %>
    <%= form_for @emply do |e|%>
      <div class="form-group">
        <%= e.label :first_name, "First Name:" %>
        <%= e.text_field :first_name %><br />
      </div>

      <div class="form-group">
        <%= e.label :last_name, "Last Name:" %>
        <%= e.text_field :last_name %><br />
      </div>

      <div class="form-group">
        <%= e.label :email, "Email:" %>
        <%= e.text_field :email %><br />
      </div>

      <div class="form-group">
      <%= e.submit %>
      </div>
  <% end %>
</form>
</div>