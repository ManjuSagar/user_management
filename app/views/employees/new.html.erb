
<h3 style="margin-top: 50px"> Add Employee</h3>

  <%= form_for @emply, url: employees_path do |t| %>
  <form class="form-horizontal">
  <div class="form-group">
    <%= t.label :email, "Email:", :class=> "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= t.text_field :email, :class=> "form-control", :placeholder=> "Email" %><br />
    </div>
  </div>

  <div class="form-group">
    <%= t.label :password, "Password:", :class=> "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= t.password_field :password, :class=> "form-control", :placeholder=> "Password" %><br />
    </div>
  </div>

  <div class="form-group">
    <%= t.label :first_name, "First Name:", :class=> "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= t.text_field :first_name, :class=> "form-control", :placeholder=> "First Name" %><br />
    </div>
  </div>

  <div class="form-group">
    <%= t.label :last_name, "Last Name:", :class=> "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= t.text_field :last_name, :class=> "form-control", :placeholder=> "Last Name" %><br />
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= t.submit "Add Employee", :class=>"btn btn-primary" %>
    </div>
  </div>
</form>
  <% end %>