
<h3 style="margin-top: 50px"> Add Task</h3>

<%= form_for @task do |t| %>
    <form class="form-horizontal">
      <div class="form-group">
        <%= t.label :title, "Title:", :class=> "col-sm-2 control-label"%>
        <div class="col-sm-10">
          <%= t.text_field :title, :class=> "form-control", :placeholder=> "Title" %><br />
        </div>
      </div>

      <div class="form-group">
        <%= t.label :description, "Description:", :class=> "col-sm-2 control-label"%>
        <div class="col-sm-10">
          <%= t.text_area :description, :class=> "form-control", :placeholder=> "Description" %><br />
        </div>
      </div>

      <div class="form-group">
        <%= t.label :assigned_to, "Assign to:", :class=> "col-sm-2 control-label"%>
        <div class="col-sm-10">
          <%= t.collection_select(:assigned_to, User.all, :id, :first_name) %><br/>
          <%#= t.text_field :first_name, :class=> "form-control", :placeholder=> "First Name" %><br />
        </div>
      </div>

      <div class="form-group">
        <%= t.label :start_date, "Start Date:", :class=> "col-sm-2 control-label"%>
        <div class="col-sm-10">
          <%= t.date_select :start_date, :class=> "form-control", :placeholder=> "Start Date" %><br />
        </div>
      </div>


      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= t.submit "Add Task", :class=>"btn btn-primary" %>
        </div>
      </div>
    </form>
<% end %>